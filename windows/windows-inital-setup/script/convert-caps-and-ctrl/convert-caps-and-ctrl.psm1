function Convert-CapsAndCtrl {
    $scancodePath = "HKLM:\SYSTEM\CurrentControlSet\Control\Keyboard Layout"
    New-ItemProperty -Path $scancodePath -Name "Scancode Map" -PropertyType Binary -Value ([byte[]](0x00,0x00,0x00,0x00,0x00,0x00,0x00,0x00,0x03,0x00,0x00,0x00,0x1d,0x00,0x3a,0x00,0x3a,0x00,0x1d,0x00,0x00,0x00,0x00,0x00))
}
Export-ModuleMember -Function Convert-CapsAndCtrl
